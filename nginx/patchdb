server {
        listen 443 ssl;
        listen [::]:443 ssl;

        ssl_certificate     /etc/letsencrypt/live/patchdb.se/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/patchdb.se/privkey.pem;
        ssl_protocols       TLSv1.2 TLSv1.3;
        ssl_ciphers         HIGH:!aNULL:!MD5;

        root /var/www/patch_db;
        index index.html;

        server_name patchdb.se;

        location / {
                try_files $uri $uri/ $uri.html $uri.htm =404;
        }

        location /patchdb/api/ {
                proxy_pass http://localhost:5000/;
                proxy_set_header Host $host;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
}