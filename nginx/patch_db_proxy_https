server {
    listen 443 ssl;
    listen [::]:443 ssl;

    ssl_certificate     /etc/letsencrypt/live/patchdb.se/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/patchdb.se/privkey.pem;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    server_name patchdb.se;

    location / {
        proxy_pass https://deploy.cloud.cbh.kth.se:20252;
        proxy_ssl_verify on;
        proxy_ssl_trusted_certificate /etc/nginx/certs/backend.crt;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}